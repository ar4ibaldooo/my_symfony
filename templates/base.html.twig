<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
<div>
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <p>Hello {{ app.user.username }}!       <a class="nav-link" href="{{ path('app_logout') }}">Logout</a></p>
    {% endif %}
</div>
<nav        {{ is_granted('ROLE_PREVIOUS_ADMIN') ? 'style="background-color: red !important"' }}>

        <div>
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li>
                    <a class="nav-link" href="{{ path('dashboard') }}">Panel Admin</a>
                </li>
                <li>
                    <a class="nav-link" href="{{ path('note') }}">Add note</a>
                </li>
            </ul>
        </div>
    <div>


    </div>
</nav>
{% block body %}{% endblock %}
</body>
</html>